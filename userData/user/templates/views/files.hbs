    <table id="myTable">
    </table>
    <div class="nodata" id="empty">
      <script>
        function myCreate() {
          
          var array = [];
          str = "{{post.records}}";
          var st = str.split(',');
          st.forEach(function(obj){
            array.push(obj);
          });
          console.log(array.length)
          if (str != "") {
            for (let index = 0; index < array.length; index++){
              var table = document.getElementById("myTable");
              var row = document.createElement("TR");
              row.setAttribute("class", "myTr");
              table.appendChild(row);
    
    
              var cell1 = document.createElement("TD");
              var cell2 = document.createElement("TD");
              var cell3 = document.createElement("TD");
              cell1.setAttribute("class", "td1");
              cell2.setAttribute("class", "td2");
              cell3.setAttribute("class", "td3");
              row.appendChild(cell1);
              row.appendChild(cell2);
              row.appendChild(cell3);
    
    
              var x = document.createElement("BUTTON");
              cell1.appendChild(x);
              x.innerHTML = "abc"

              var m = document.createElement("A");
              var n = document.createElement("FORM");
              cell2.appendChild(m);
              cell3.appendChild(n);
              m.href = "./uploads/"+array[index]
              m.target = "_blank"
              m.Download = ""
              n.action = "/delete"
              n.method = "POST"


              var y = document.createElement("BUTTON");
              var z = document.createElement("BUTTON");
              
              m.appendChild(y);
              n.appendChild(z);
              z.value = array[index];

              x.innerHTML = array[index];
              y.innerHTML = "Download"
              z.innerHTML = "Delete"
              x.setAttribute("class", "bt1");
              y.setAttribute("class", "bt2");
              z.setAttribute("class", "bt3");
              z.setAttribute("name", "btn");
            }
          }
          else
          {
            var a = document.getElementById("empty");
            a.innerHTML = "No Data Available";
          }    
          hideButton();   
        }       
      </script>
    </div>
